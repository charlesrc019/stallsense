<!DOCTYPE html>
<html lang="en">

<% include partials/head %> 

<body>

  <!-- Navbar -->
  <% include partials/nav %>

  <!-- Table -->
  <div class="container mt-5">    
    <h2>Status</h2>
    <table class="table table-striped">
      <thead>
        <th scope="col">Location</th>
        <th scope="col">Type</th>
        <th scope="col">IP Address</th>
        <th scope="col">Updated</th>
        <th scope="col">Status</th>
        <th scope="col"></th>
      </thead>
      <tbody id="sensors">
        <% sensors.forEach(function(sensor) { %>
        <tr id="sensor<%- sensor.id %>">
          <td class="pt-3"><%- sensor.location %></th>
          <td class="pt-3"><%- sensor.type %></td>
          <td class="pt-3"><%- sensor.ip %></td>
          <td class="pt-3"><%- sensor.updatedAt %></td>
          <td><button type="button" class="btn btn-dark btn-sm"><%- sensor.status %></button></td>
          <td><button type="button" class="btn btn-outline-dark btn-sm" data-toggle="modal" data-target="#modal<%- sensor.id %>">Reset</button></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Modals -->
  <% sensors.forEach(function(sensor) { %>
  <div class="modal fade" id="modal<%- sensor.id %>" tabindex="-1" role="dialog" aria-labelledby="modal<%- sensor.id %>label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal<%- sensor.id %>label">Warning</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">Are you sure you want to reset this sensor?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <a href="/reset/<%- sensor.id %>"><button type="button" class="btn btn-danger">Reset</button></a>
        </div>
      </div>
    </div>
  </div>
  <% }); %>

  <% include partials/script %>

</body>

</html>
